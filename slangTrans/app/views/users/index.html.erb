<% if session[:user_name] %>
	<% display_name = session[:user_name] %>
<% else %>
	<% display_name = "Guest" %>
<% end %>

<h1>Welcome <%= display_name%></h1>
<div>
	<p> Search Bar Here </p>
	<p> <%= link_to("Show All Slangs", slangs_path) %> </p>
</div>
<div>
	<p> <%= link_to("Click here to Sign Up", new_user_path) %> </p>
</div>

<div>
	<%# If user exist, show the logout button, else show the log in button %>
	<% if session[:user_id] %>
		<%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
		  <input type=submit value='logout'>
		<% end %>
	<% else %>
		<p> <%= link_to("Click Here to Login", login_path) %> </p>
	<% end %>
</div>