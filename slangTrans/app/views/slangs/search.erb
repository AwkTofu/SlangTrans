<%#This is used to keep track of which page u goto after logging in %>
<%session[:before_login_url] = request.original_url%> 

<article id="slang_search">

<%= form_tag(search_slang_path, :method => "get") do %>  
  
    <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>  
     
      <%= button_tag "Search slang", :class => 'search',:name => nil%>  
    
<% end %>
<%if @results.any?%>
<p><% @results.each do |result|%>
<%= link_to result.phrase, slang_path(result)%> <br>
<%end%>
<%else%>
<%="Not found"%>
<%end%>
<%if session[:user_id]%>
<%= button_to 'Create New Slang', new_slang_path, method: "get" %>
<% else %>
<%end %>

</p>
</article>