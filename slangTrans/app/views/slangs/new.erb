<h1>Create New Slang</h1>
<%if flash[:errors]%>
<% flash[:errors].each do |error|%>
<%= error %>
<%end%>
<%end%>
 
<%= form_for @slang do |f|%>

<%=f.label :phrase%>
<%=f.text_field :phrase%>
<%=f.label :origin%>
<%=f.text_field :origin%> <br>
<p>Definitions:</p>
<ul>
	<%= f.fields_for :definitions do |definitions_form| %>
		<li>
			<p> Meaning: <%= definitions_form.text_field :meaning %> </p> 
      <p> Language: <%= definitions_form.text_field :language %> </p> 

      

		</li>
	<% end %>
	</ul>

<%=f.submit "Create"%>
<%end%>

<%= button_to 'Back to Homepage', main_menu_path, method: "get" %>






